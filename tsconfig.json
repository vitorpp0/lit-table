{
    "compilerOptions": {
      "target": "ES6",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "noEmitOnError": true,
      "moduleResolution": "Node",
      "experimentalDecorators": true
    },
    "include": [
      "src/*.ts"
    ],
    "exclude": [
      "node-modules"
    ]
  }